<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_detail_popup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cirimageviewprofile"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_centerVertical="true"
        android:background="@drawable/app_buzz_logo"
        android:backgroundTint="@color/black"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_names"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/cirimageviewprofile"
        android:text="gupta"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_birthdays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_names"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/cirimageviewprofile"
        android:text="Birthday"
        android:textColor="@color/black"
        android:textSize="11sp" />

    <ImageView
        android:id="@+id/send_friend_message"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="100dp"
        android:layout_toStartOf="@+id/rlt"
        android:layout_toLeftOf="@+id/rlt"
        android:background="@drawable/message_friend_purple" />

    <TextView
        android:id="@+id/send_gif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="100dp"
        android:layout_toStartOf="@+id/rlt"
        android:layout_toLeftOf="@+id/rlt"
        android:text="GIF"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/rlt"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10-100"
            android:textColor="@color/black"
            android:textSize="14sp"

            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_date"
            android:layout_marginLeft="7dp"
            android:text="21:17"
            android:textColor="@color/black"
            android:textSize="13sp" />
    </RelativeLayout>
</RelativeLayout>

