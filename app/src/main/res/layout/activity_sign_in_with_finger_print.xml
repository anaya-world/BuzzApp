<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/background" android:layout_width="match_parent" android:layout_height="match_parent">
    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <ImageView android:layout_gravity="center" android:background="@mipmap/buzz_logo_240" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginTop="35dp"/>

            <TextView android:textSize="16sp"
                android:gravity="center" android:textStyle="bold" android:textColor="@android:color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Fingerprint Sign in"/>
            <View android:background="#fe8080" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginLeft="40dp" android:layout_marginTop="10dp" android:layout_marginRight="40dp" android:layout_below="@+id/secret_id" android:layout_centerHorizontal="true"/>
            <TextView android:textColor="@color/color_white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="10dp" android:text="Link your fingerprint for secure and fast"/>
            <TextView android:textColor="@color/color_white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Sign In"/>
            <ImageView android:layout_gravity="center" android:background="@drawable/fingerprint_image" android:layout_width="120dp" android:layout_height="120dp" android:layout_marginTop="30dp"/>
            <TextView android:textColor="@color/color_white" android:layout_gravity="center" android:id="@+id/errorText" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="Place your finger over the Sensor"/>
            <Button android:textColor="@android:color/white" android:id="@+id/button_SignUp" android:background="@drawable/signin_shape" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:layout_marginRight="40dp" android:minHeight="30dp" android:text="Register/Change Fingerprint" android:layout_centerVertical="true" android:textAllCaps="false"/>
            <TextView android:textSize="12sp" android:textColor="@color/color_white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="20dp" android:text="For first time, sign in with Buzz ID to activate this feature"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>