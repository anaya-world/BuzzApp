<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.CompleteYourProfile">
    <LinearLayout android:orientation="vertical"
        android:layout_width="match_parent"
        android:id="@+id/linearLay"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/settings_image_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:paddingRight="4dp"
                app:srcCompat="@drawable/setting_image" />

            <de.hdodenhof.circleimageview.CircleImageView android:layout_centerHorizontal="true"
                android:background="@mipmap/buzz_logo_240"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginBottom="15dp"
                android:id="@+id/user_profile_image_view"
                android:layout_marginTop="25dp"/>

        </RelativeLayout>

        <RelativeLayout android:orientation="vertical"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:visibility="visible">
            <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relLAy"
                >
                <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent">
                    <LinearLayout android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="20dp" android:layout_marginRight="40dp">
                        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
                            <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
                                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                                    <ImageView android:layout_gravity="center"
                                        android:id="@+id/user_logo_1"
                                        android:background="@drawable/ic_person_black_24dp"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"/>
                                    <EditText android:textSize="14sp"
                                        android:inputType="textCapSentences"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:id="@+id/et_user_name"
                                        android:background="@null"

                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="30dp"
                                        android:hint="Name" android:ems="10"
                                        android:singleLine="true"
                                        android:maxLength="32"
                                        android:layout_toRightOf="@+id/user_logo_1"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"/>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_below="@+id/et_user_name"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp">
                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView android:layout_gravity="center"
                                        android:id="@+id/user_logo_2"
                                        android:background="@drawable/ic_cake_black_24dp"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"/>
                                    <TextView android:textSize="14sp"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:id="@+id/date_of_birth"
                                        android:background="@null"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="30dp"
                                        android:hint="Date of Birth"
                                        android:ems="10"
                                        android:singleLine="true"
                                        android:maxLength="16"
                                        android:layout_toRightOf="@+id/user_logo_2"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"/>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="4dp"
                                        android:layout_below="@+id/date_of_birth"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout android:orientation="horizontal"
                                android:id="@+id/relative_sex"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">
                                <RelativeLayout android:layout_width="wrap_content"
                                    android:layout_height="22dp">
                                    <ImageView android:layout_gravity="center"
                                        android:id="@+id/user_logo_3"

                                        android:background="@drawable/ic_mars"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"/>
                                    <TextView android:textSize="14sp"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:id="@+id/current_user_id3"
                                        android:background="@null"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:text="Gender"
                                        android:singleLine="true"
                                        android:maxLength="16"
                                        android:layout_toRightOf="@+id/user_logo_3"
                                        android:layout_centerVertical="true"/>
                                    <RadioGroup android:orientation="horizontal" android:id="@+id/radioGrp_sex" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                                        <RadioButton
                                            android:textSize="13dp"
                                            android:layout_gravity="left"
                                            android:id="@+id/radioM"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="true" android:text="Male  "/>
                                        <RadioButton
                                            android:textSize="13dp"
                                            android:id="@+id/radioF"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:checked="false"
                                            android:text="Female "/>
                                    </RadioGroup>
                                </RelativeLayout>
                            </LinearLayout>
                            <View android:background="@color/light_pink_col"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:layout_below="@+id/relative_sex"
                                android:layout_centerHorizontal="true"/>
                            <LinearLayout android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">
                                <LinearLayout android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <RelativeLayout android:layout_width="wrap_content"
                                        android:layout_height="22dp">

                                        <ImageView
                                            android:id="@+id/iv_ms"
                                            android:layout_width="20dp"
                                            android:layout_height="20dp"
                                            android:layout_gravity="center"
                                            android:layout_centerVertical="true"
                                            android:background="@drawable/ic_heart_shape_outline" />
                                        <TextView android:textSize="14sp"
                                            android:textColor="@android:color/black"
                                            android:textColorHint="@android:color/black"
                                            android:id="@+id/et_ms"
                                            android:background="@null"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginLeft="10dp"
                                            android:layout_marginRight="30dp"
                                            android:text="Marital Status"
                                            android:singleLine="true"
                                            android:maxLength="16"
                                            android:layout_toRightOf="@+id/iv_ms"
                                            android:layout_centerVertical="true"/>
                                        <RadioGroup android:orientation="horizontal" android:id="@+id/radioGrp_marital" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                                            <RadioButton android:textSize="13dp" android:layout_gravity="left" android:id="@+id/radio_Single" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="true" android:text="Single"/>
                                            <RadioButton android:textSize="13dp" android:id="@+id/radio_married" android:layout_width="wrap_content" android:layout_height="wrap_content" android:checked="false" android:text="Married"/>
                                        </RadioGroup>
                                    </RelativeLayout>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"

                                        android:layout_below="@+id/anniversary_relative"
                                        android:layout_centerHorizontal="true"/>
                                    <LinearLayout android:orientation="vertical"
                                        android:id="@+id/anniversary_relative"
                                        android:visibility="gone"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                        <RelativeLayout android:visibility="visible"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="4dp" android:layout_marginBottom="5dp">
                                            <LinearLayout android:layout_width="wrap_content"
                                                android:layout_height="wrap_content">
                                                <ImageView
                                                    android:textColor="@color/color_white"
                                                    android:layout_gravity="center"
                                                    android:background="@mipmap/ic_anniversary"
                                                    android:layout_width="20dp"
                                                    android:backgroundTint="@color/black"
                                                    android:layout_height="20dp"
                                                    android:layout_alignParentLeft="true"/>
                                                <TextView android:textColor="@color/tab_black" android:layout_width="wrap_content" android:layout_height="match_parent" android:layout_marginLeft="5dp" android:text="Anniversary" android:layout_alignParentLeft="true"/>
                                            </LinearLayout>
                                            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentRight="true">
                                                <TextView android:textSize="14sp"
                                                    android:textColor="@color/tab_black"
                                                    android:layout_gravity="center"
                                                    android:id="@+id/et_anniversary"
                                                    android:background="@null"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="wrap_content"
                                                    android:text="00-00-0000"
                                                    android:editable="false"/>
                                                <ImageView
                                                    android:id="@+id/date_anniversary"
                                                    android:background="@mipmap/ic_calender"
                                                    android:layout_width="20dp"
                                                    android:layout_height="20dp"/>
                                            </LinearLayout>
                                        </RelativeLayout>
                                        <View android:id="@+id/view_anni"
                                            android:background="@color/light_pink_col"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_below="@+id/anniversary_relative" android:layout_centerHorizontal="true"/>
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                            <LinearLayout android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">
                                <RelativeLayout android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <ImageView android:layout_gravity="center"
                                        android:id="@+id/iv_work_on"

                                        android:background="@drawable/ic_portfolio"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"/>
                                    <EditText
                                        android:textSize="14sp"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:id="@+id/et_work_for"
                                        android:background="@null"

                                        android:inputType="textCapSentences"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="30dp"
                                        android:hint="Work for"
                                        android:ems="10" android:singleLine="true"
                                        android:maxLength="36"
                                        android:layout_toRightOf="@+id/iv_work_on" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="4dp" android:layout_below="@+id/et_work_for" android:layout_centerHorizontal="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">
                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <ImageView
                                        android:layout_gravity="center"
                                        android:id="@+id/iv_resident"
                                        android:background="@drawable/ic_home_black_24dp"
                                        android:layout_width="20dp"
                                        android:layout_height="20dp"
                                        android:layout_centerVertical="true"/>
                                    <TextView
                                        android:textSize="14sp"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:id="@+id/et_resident"
                                        android:background="@null"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginRight="10dp"
                                        android:hint="Resident"
                                        android:ems="10"
                                        android:singleLine="true"
                                        android:maxLength="16"
                                        android:layout_toRightOf="@+id/iv_resident"
                                        android:layout_centerHorizontal="true"
                                        android:layout_centerVertical="true"/>
                                    <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_marginRight="10dp"
                                        app:srcCompat="@drawable/ic_drop_down"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"/>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="4dp" android:layout_below="@+id/et_resident" android:layout_centerHorizontal="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                            <RelativeLayout android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">
                                <LinearLayout android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <ImageView
                                            android:id="@+id/iv_Interest"
                                            android:layout_width="13dp"
                                            android:layout_height="14dp"
                                            android:layout_marginLeft="3dp"
                                            android:layout_alignParentRight="true"
                                            android:layout_centerVertical="true"
                                            android:layout_gravity="center"
                                            android:background="@drawable/ic_favorite_heart_button"
                                            />

                                        <TextView android:textSize="14sp" android:textColor="@android:color/black" android:id="@+id/et_Interest" android:background="@null" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="12.1dp" android:text="Interest " android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/iv_Interest" android:layout_centerVertical="true"/>
                                    </LinearLayout>
                                    <LinearLayout android:orientation="vertical"
                                        android:id="@+id/LL_spinner"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="4dp">
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:paddingTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="2"
                                            >
                                            <FrameLayout
                                                android:id="@+id/frame1"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">

                                                <Spinner
                                                    android:id="@+id/spinner_interest_one"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent" />
                                            </FrameLayout>
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:id="@+id/frame2"
                                                android:layout_weight="1">
                                                <Spinner
                                                    android:id="@+id/spinner_interest_two"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"
                                                    android:layout_centerVertical="true"/>
                                            </FrameLayout>


                                        </LinearLayout>
                                        <View android:background="@color/light_pink_col"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_below="@+id/frame2"
                                            android:layout_centerHorizontal="true"/>
                                        <LinearLayout
                                            android:paddingTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="2">
                                            <FrameLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">
                                                <Spinner
                                                    android:id="@+id/spinner_interest_three"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"/>
                                            </FrameLayout>
                                            <FrameLayout android:id="@+id/frame3"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">
                                                <Spinner android:id="@+id/spinner_interest_four"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"/>
                                            </FrameLayout>

                                        </LinearLayout>
                                        <View android:background="@color/light_pink_col"
                                            android:layout_width="match_parent"
                                            android:layout_height="1dp"
                                            android:layout_below="@+id/frame3"
                                            android:layout_centerHorizontal="true"/>
                                        <LinearLayout
                                            android:orientation="horizontal"
                                            android:paddingTop="5dp"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:weightSum="2"
                                            >
                                            <FrameLayout android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">
                                                <Spinner android:id="@+id/spinner_interest_five"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"/>
                                            </FrameLayout>
                                            <FrameLayout android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:layout_weight="1">
                                                <Spinner android:id="@+id/spinner_interest_six"
                                                    android:layout_width="match_parent"
                                                    android:layout_height="match_parent"/>
                                            </FrameLayout>

                                        </LinearLayout>
                                    </LinearLayout>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_below="@+id/LL_spinner" android:layout_centerHorizontal="true"/>
                                </LinearLayout>
                            </RelativeLayout>
                            <LinearLayout android:orientation="horizontal"
                                android:id="@+id/liner_security_code_hide"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp">
                                <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                                    <ImageView android:layout_gravity="center"
                                        android:id="@+id/iv_Security_code"
                                        app:srcCompat="@mipmap/ic_terms"
                                        android:background="@drawable/ic_document"
                                        android:layout_width="20dp" android:layout_height="20dp" android:layout_centerVertical="true"/>

                                    <TextView
                                        android:id="@+id/et_Security_code"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="8dp"
                                        android:layout_toRightOf="@+id/iv_Security_code"
                                        android:background="@null"
                                        android:hint="Security Code "
                                        android:maxLength="16"
                                        android:singleLine="true"
                                        android:textColor="@android:color/black"
                                        android:textColorHint="@android:color/black"
                                        android:textSize="14sp" />
                                    <LinearLayout android:layout_width="match_parent"
                                        android:weightSum="2"
                                        android:layout_marginLeft="4dp"
                                        android:layout_height="wrap_content"
                                        android:layout_toRightOf="@+id/et_Security_code"
                                        android:layout_centerVertical="true"
                                        android:layout_marginStart="2dp">
                                        <LinearLayout android:layout_width="match_parent"
                                            android:layout_weight="1"
                                            android:layout_marginLeft="20dp"
                                            android:layout_height="match_parent"
                                            >

                                            <Spinner
                                                android:id="@+id/alphabets_spinner"
                                                android:layout_width="match_parent"


                                                android:layout_height="wrap_content"
                                                android:dropDownWidth="60dp"

                                                android:padding="5dp"
                                                android:spinnerMode="dropdown" />
                                        </LinearLayout>
                                        <LinearLayout android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1">
                                            <Spinner android:id="@+id/number_spinner"
                                                android:padding="5dp"

                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:dropDownWidth="60dp"
                                                android:spinnerMode="dropdown"/>
                                        </LinearLayout>
                                    </LinearLayout>
                                    <View android:background="@color/light_pink_col"
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_below="@+id/et_Security_code"
                                        android:layout_centerHorizontal="true"/>
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                        <Button android:textSize="16sp"
                            android:textColor="@android:color/white"
                            android:id="@+id/send_data"
                            android:background="@drawable/signin_shape"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="20dp"
                            android:minHeight="30dp"
                            android:text="Submit"
                            android:textAllCaps="false"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
            <ProgressBar
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_60sdp"
                android:id="@+id/progress"
                android:visibility="gone"
                />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>