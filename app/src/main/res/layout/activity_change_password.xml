<?xml version="1.0" encoding="utf-8"?>
<tools:RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/app_color_voilet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.ChangePasswordActivity">
    <ScrollView android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="3dp" android:layout_alignParentTop="true">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="25dp">
            <de.hdodenhof.circleimageview.CircleImageView android:layout_gravity="center" android:background="@mipmap/buzzlogo" android:layout_width="100dp" android:layout_height="100dp" android:layout_marginTop="35dp" android:layout_marginBottom="10dp"/>
            <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                <TextView android:textSize="25dp" android:textColor="@android:color/white" android:id="@+id/Sign_in_SignUp_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Change Passkey "/>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/user_login_layout" android:visibility="visible" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginTop="25dp">
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="38dp" android:layout_marginTop="5dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/lock_view1" android:background="@mipmap/ic_secure" android:layout_width="25dp" android:layout_height="20dp" android:layout_centerVertical="true"/>
                        <EditText android:textSize="12sp"

                            android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/current_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="Current Passkey" android:ems="10" android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/lock_view1" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="textCapSentences"/>
                        <ImageView android:id="@+id/hide_password" android:background="@mipmap/ic_view_password" android:layout_width="30dp" android:layout_height="25dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <View android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/current_password" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="38dp" android:layout_marginTop="10dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/lock_view2" android:background="@mipmap/ic_secure" android:layout_width="25dp" android:layout_height="20dp" android:layout_centerVertical="true"/>
                        <EditText android:textSize="12sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/new_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="New Passkey" android:ems="10" android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/lock_view2" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="textCapSentences"/>
                        <ImageView android:id="@+id/hide_new_password" android:background="@mipmap/ic_view_password" android:layout_width="30dp" android:layout_height="25dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <View android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/new_password" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="38dp" android:layout_marginTop="10dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/lock_view3" android:background="@mipmap/ic_secure" android:layout_width="25dp" android:layout_height="20dp" android:layout_centerVertical="true"/>
                        <EditText android:textSize="12sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/confirm_password" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="Confirm Passkey" android:ems="10" android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/lock_view3" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="textCapSentences"/>
                        <ImageView android:id="@+id/hide_password_confirm" android:background="@mipmap/ic_view_password" android:layout_width="30dp" android:layout_height="25dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <View android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/confirm_password" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_gravity="center" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <Button android:textSize="12dp" android:textColor="@android:color/white" android:layout_gravity="center" android:id="@+id/update_password" android:background="@drawable/signin_shape" android:paddingLeft="20dp" android:paddingRight="20dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="15dp" android:minHeight="35dp" android:text="Update passkey" android:textAllCaps="false"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout android:orientation="vertical" android:id="@+id/user_registration_layout" android:visibility="gone" android:layout_width="match_parent" android:layout_height="match_parent">
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="40dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/user_logo_" android:background="@mipmap/ic_user" android:layout_width="18dp" android:layout_height="20dp" android:layout_marginLeft="3dp" android:layout_centerVertical="true"/>
                        <EditText android:textSize="12sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/secret_id" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="Secret ID" android:ems="10" android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/user_logo_" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                        <View android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/secret_id" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="5dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/phone_iv" android:background="@mipmap/ic_phone" android:layout_width="20dp" android:layout_height="17dp" android:layout_marginLeft="3dp" android:layout_centerVertical="true"/>
                        <TextView android:textSize="12sp" android:textColor="@color/color_white" android:id="@+id/tv_std_code" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="+44" android:layout_toRightOf="@+id/phone_iv" android:layout_centerVertical="true"/>
                        <EditText android:textSize="12sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/user_mobile" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="15dp" android:layout_marginRight="30dp" android:hint="Mobile no" android:ems="10" android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/tv_std_code" android:layout_centerVertical="true" android:inputType="number"/>
                        <View android:id="@+id/UnderLine" android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/user_mobile" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="40dp" android:layout_marginTop="5dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="16sp" android:textStyle="bold" android:textColor="@color/color_white" android:id="@+id/text_at" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="3dp" android:text="@string/at"/>
                        <EditText android:textSize="12sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/user_email" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="Email address" android:ems="10" android:singleLine="true" android:layout_toRightOf="@+id/text_at" android:layout_centerHorizontal="true" android:layout_centerVertical="true"/>
                        <View android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/user_email" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:layout_marginLeft="38dp" android:layout_marginTop="5dp" android:layout_marginRight="40dp">
                    <RelativeLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <ImageView android:id="@+id/lock_view" android:background="@mipmap/ic_secure" android:layout_width="25dp" android:layout_height="20dp" android:layout_centerVertical="true"/>
                        <EditText android:textSize="12sp" android:textColor="@android:color/white" android:textColorHint="@android:color/white" android:id="@+id/user_passkey" android:background="@null" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="30dp" android:hint="Passkey" android:ems="10" android:singleLine="true" android:maxLength="16" android:layout_toRightOf="@+id/lock_view" android:layout_centerHorizontal="true" android:layout_centerVertical="true" android:inputType="textPassword"/>
                        <ImageView android:id="@+id/iv_view_passkey" android:background="@mipmap/ic_view_password" android:layout_width="20dp" android:layout_height="20dp" android:layout_alignParentRight="true" android:layout_centerVertical="true"/>
                        <View android:id="@+id/UnderLine1" android:background="@color/light_pink_col" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/user_passkey" android:layout_centerHorizontal="true"/>
                    </RelativeLayout>
                </LinearLayout>
                <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginTop="30dp" android:layout_marginRight="35dp">
                    <Button android:textSize="12sp" android:textColor="@android:color/white" android:id="@+id/button_SignUp_regiter" android:background="@drawable/signin_shape" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="30dp" android:minHeight="30dp" android:text="Sign up" android:layout_centerVertical="true" android:textAllCaps="false"/>
                </RelativeLayout>
                <TextView android:textSize="12sp" android:textColor="@color/color_white" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="30dp" android:text="By Signing up, you are Agreeing to Buzz app"/>
                <LinearLayout android:layout_gravity="center" android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="12sp" android:textColor="@color/color_white" android:id="@+id/tv_priv_pol" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Privacy policies"/>
                        <View android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="2dp"/>
                    </LinearLayout>
                    <TextView android:textColor="@color/color_white" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dp" android:layout_marginRight="5dp" android:text="or"/>
                    <LinearLayout android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content">
                        <TextView android:textSize="12sp" android:textColor="@color/color_white" android:id="@+id/tv_terms_and_cond" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/terms_and_conditiions"/>
                        <View android:background="@color/color_white" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="2dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</tools:RelativeLayout>