<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_marginStart="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="3dp"
    android:gravity="start"
    android:orientation="horizontal">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_bimg"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_logo_pink" />

    <TextView
        android:id="@+id/group_members_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:singleLine="true"
        android:text="Vivek Singh"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end|center">

        <ImageView
            android:id="@+id/iv_leave_group"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@android:string/ok"
            android:background="@drawable/leave_group"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_admin"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:contentDescription="@android:string/ok"
            android:layout_gravity="center"
            android:background="@drawable/profile_setting"
            android:visibility="gone" />
    </FrameLayout>
</LinearLayout>
